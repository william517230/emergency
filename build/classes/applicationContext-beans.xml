<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	
	<context:annotation-config/>
	<!-- 扫描com.modelsystem下的所有包 -->
	<context:component-scan base-package="com.modelsystem" />
	<!-- 持久层类所在包扫描 
	<context:component-scan base-package="com.basedemo.dao.impl" />-->
	<!-- 业务逻辑层所在包扫描
	<context:component-scan base-package="com.basedemo.service.impl" />-->
	<!-- Action层所在包扫描 
	<context:component-scan base-package="com.basedemo.action" />-->
	<!-- Hibernate拦截器所在包扫描
	<context:component-scan base-package="com.basedemo.interceptor.hibernate" />-->
</beans>